{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "MacVersion": {
            "enum": [
                "yosemite",
                "el_capitan",
                "sierra",
                "high_sierra",
                "mojave"
            ]
        },
         "DefaultSettingType": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "description": {
                    "type": "string"
                },
                "start": {
                    "$ref": "#/definitions/MacVersion"
                },
                "end": {
                    "$ref": "#/definitions/MacVersion"
                },
                "check_command": {
                    "type": "string"
                },
                "command": {
                    "type": "string"
                },
                "expected_check_state": {
                    "type": "string"
                },
                "sudo": {
                    "type": "boolean",
                    "default": false
                },
                "check_output": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": ["name", "command"]
        },
        "DefaultSettingsType": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/DefaultSettingType"
            }
        }
    },

    "allOf": [
        {
            "$ref": "./common.json"
        },
        {
            "properties": {
                "default_settings": {
                    "$ref": "default_settings.json#/definitions/DefaultSettingsType"
                }
            }
        }
    ]


}
