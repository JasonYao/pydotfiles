{
    "type": "object",
    "properties": {
        "version": {
            "enum": ["alpha"]
        },
        "schema": {
            "enum": ["core", "default_settings"]
        },
        "default_settings": {
            "$ref": "#/definitions/DefaultSettingsType"
        }
    },
    "required": ["version", "schema"],
    "definitions": {
        "MacVersion": {
            "enum": [
                "yosemite",
                "el_capitan",
                "sierra",
                "high_sierra",
                "mojave"
            ]
        },
        "DefaultSettingsType": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/DefaultSettingType"
            }
        },
        "DefaultSettingType": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "description": {
                    "type": "string"
                },
                "start": {
                    "$ref": "#/definitions/MacVersion"
                },
                "end": {
                    "$ref": "#/definitions/MacVersion"
                },
                "check_command": {
                    "type": "string"
                },
                "command": {
                    "type": "string"
                },
                "expected_check_state": {
                    "type": "string"
                },
                "sudo": {
                    "type": "boolean",
                    "default": false
                },
                "check_output": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": ["name", "command"]
        }
    }
}
