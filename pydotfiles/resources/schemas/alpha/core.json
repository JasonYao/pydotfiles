{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "OperatingSystemType": {
            "type": "object",
            "properties": {
                "name": {
                    "enum": ["macos", "linux"]
                },
                "shell": {
                    "enum": ["bash", "zsh"]
                },
                "packages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "applications": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "default_dock": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "default_settings_file": {
                    "type": "string"
                }
            },
            "required": ["name"]
        },
        "ActionType": {
            "type": "object",
            "properties": {
                "action": {
                    "enum": [
                        "copy",
                        "symlink",
                        "script"
                    ]
                },
                "files": {
                    "type": "object",
                    "properties": {
                        "terms": {
                            "type": "string"
                        }
                    }
                },
                "hidden": {
                    "type": "boolean",
                    "default": false
                },
                "sudo": {
                    "type": "boolean",
                    "default": false
                },
                "absolute": {
                    "type": "boolean",
                    "default": false
                }
            },
            "required": ["action", "files"]

        },
        "ActionsType": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/ActionType"
            }
        },
        "EnvironmentType": {
            "type": "object",
            "properties": {
                "language": {
                    "enum": ["python", "ruby", "java"]
                },
                "versions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "environment_manager": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "plugins": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "required": ["name"]
                }
            },
            "required": ["language", "versions"]
        },
        "EnvironmentsType": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/EnvironmentType"
            }
        }
    },

    "allOf": [
        {
            "$ref": "./common.json"
        },
        {
            "properties": {
                "os": {
                    "$ref": "core.json#/definitions/OperatingSystemType"
                },
                "actions": {
                    "$ref": "core.json#/definitions/ActionsType"
                },
                "environments": {
                    "$ref": "core.json#/definitions/EnvironmentsType"
                }
            }
        }
    ]


}
